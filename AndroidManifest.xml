<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tw.com.thinkso.novelreaderapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="14" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:name="tw.com.lightnovel.core.SubApplication"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="tw.com.lightnovel.activities.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@android:style/Theme.Holo.Light"
            android:uiOptions="splitActionBarWhenNarrow" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="tw.com.lightnovel.activities.OnlineNovelIndexActivity"
            android:label="@string/title_activity_novel_index"
            android:theme="@android:style/Theme.Holo.Light" >
        </activity>
        <activity
            android:name="tw.com.lightnovel.activities.LocalNovelIndexActivity"
            android:label="@string/title_activity_novel_index"
            android:theme="@android:style/Theme.Holo.Light" >
        </activity>
        <activity
            android:name="tw.com.lightnovel.activities.OnlineVolumeActivity"
            android:label="@string/title_activity_volume"
            android:theme="@android:style/Theme.Holo.Light" >
        </activity>
         <activity
            android:name="tw.com.lightnovel.activities.LocalVolumeActivity"
            android:label="@string/title_activity_volume"
            android:theme="@android:style/Theme.Holo.Light" >
        </activity>
        <activity
            android:name="tw.com.lightnovel.activities.OnlineChapterContentActivity"
            android:label="@string/title_activity_chapter_content"
            android:theme="@android:style/Theme.Holo.Light" >
        </activity>
        <activity
            android:name="tw.com.lightnovel.activities.LocalChapterContentActivity"
            android:label="@string/title_activity_chapter_content"
            android:theme="@android:style/Theme.Holo.Light" >
        </activity>
        <activity
            android:name="tw.com.lightnovel.activities.SearchResultActivity"
            android:label="@string/title_activity_search_result"
            android:theme="@android:style/Theme.Holo.Light" >
        </activity>
        <activity
            android:name="tw.com.lightnovel.activities.LocalNovelActivity"
            android:label="@string/title_activity_local_novel"
            android:theme="@android:style/Theme.Holo.Light"
            android:uiOptions="splitActionBarWhenNarrow" >
        </activity>
    </application>

</manifest>